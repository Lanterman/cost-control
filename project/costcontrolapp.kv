# :kivy 2.1.0

<MainWindow>:
    orientation: 'vertical'

    MDToolbar:
        title: "Cost Control"
        MDIconButton:
            icon: 'eye'
            pos_hint: {"center_x": 0.5, "center_y": .5}
            on_release: app.all_reports()

    MDBoxLayout:
        orientation: 'horizontal'
        MDBottomNavigation:
            id: bottom_nav

            MDBottomNavigationItem:
                id: main
                name: "screen main"
                icon: "calendar-text-outline"

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: 5
                    MDBoxLayout:
                        size_hint: 1, 1
                        MDTextField:
                            id: search_id
                            font_size: 18
                            hint_text: "search"
                        MDRaisedButton:
                            text: "Search"
                            font_size: 16
                            pos_hint: {"center_x": 0.5, "center_y": .4}
                            on_release:
                                app.searching_results(root.ids.search_id.text)
                    ScrollView:
                        size_hint: 1, 8
                        MDList:
                            id: show_result
                            bg_color: "green"

            MDBottomNavigationItem:
                name: "screen add"
                icon: "plus-box"

                MDBoxLayout:
                    orientation: "vertical"
                    MDTextField:
                        id: add_description
                        hint_text: "Введите описание"
                        multiline: True
                    MDTextField:
                        id: add_category
                        hint_text: "Введите категорию"
                    MDTextField:
                        id: add_cost
                        hint_text: "Введите cost"
                    MDTextField:
                        id: add_price
                        hint_text: "Введите price"
                    Widget:
                    MDFloatingActionButton:
                        icon: "plus"
                        pos_hint: {'right': 0.95}
                        on_release:
                            app.insert_data(root.ids.add_description.text,
                            root.ids.add_category.text,
                            root.ids.add_cost.text,
                            root.ids.add_price.text)

            MDBottomNavigationItem:
                name: "screen cost"
                icon: "currency-usd"

                MDLabel:
                    text: "In developing"
                    halign: 'center'

            MDBottomNavigationItem:
                name: "screen clear"
                icon: "database-remove-outline"

                MDLabel:
                    text: "In developing"
                    halign: 'center'

<SearchResultItem>:
    IconLeftWidget:
        pos_hint: {"center_y": 0.4}
        icon: "language-python"
    RightButton:
        id: button
        icon: "minus"
        on_release:
            root.menu.open()