# :kivy 2.1.0

<MainWindow>:
    orientation: 'vertical'

    MDToolbar:
        id: tool
        left_action_items:
            [
            ["database-remove-outline", lambda x: root.clear_db()],
            ["dots-vertical", lambda x: root.show_menu_courses()]
            ]

    MDBoxLayout:
        orientation: 'horizontal'
        MDBottomNavigation:
            id: bottom_nav
            panel_color: [0.85, 0.92, 0.98, 1]
            text_color_normal: 0.55, 0.6, 0.6, 1
            text_color_active: 1, 0, 0, 1

            MDBottomNavigationItem:
                name: "screen add"
                icon: "plus-box"
                AddNavigationItem:

            MDBottomNavigationItem:
                name: "screen main"
                icon: "calendar-text-outline"
                on_tab_press:
                    app.root.ids.main_nav.all_reports(root.currency)
                MainNavigationItem:
                    id: main_nav

            MDBottomNavigationItem:
                name: "screen cost"
                icon: "currency-usd"
                on_tab_press:
                    root.ids.cost_nav.set_values(root.currency)
                CostNavigationItem:
                    id: cost_nav

            MDBottomNavigationItem:
                name: "screen exchange"
                icon: "bank"
                on_tab_press:
                    root.ids.exchange_nav.set_default_values()
                ExchangeNavigationItem:
                    id: exchange_nav

<AddNavigationItem>:
    orientation: "vertical"
    padding: "10sp", "10sp", "15sp", "5sp"
    spacing: "20sp"
    MDTextField:
        id: add_description
        hint_text: "Введите описание"
        multiline: True
        font_size: "18sp"
        max_text_length: 100
        max_height: "100sp"
    MDDropDownItem:
        id: drop_item_category
        text: "---------"
        font_size: "18sp"
        on_release:
            root.drop_down_category_menu()
    MDDropDownItem:
        id: drop_item_costs
        text: "Расход"
        font_size: "18sp"
        on_release:
            root.drop_down_cost_menu()
    MDTextField:
        id: add_price
        hint_text: "Введите цену"
        text: "0"
        font_size: "18sp"
        helper_text: "Десятичные числа писать через точку!"
        helper_text_mode: "on_focus"
        on_focus:
            root.cleaning_on_focus()
    Widget:
    MDFloatingActionButton:
        icon: "plus"
        pos_hint: {'right': 0.95}
        on_release:
            root.insert_data(root.ids.add_description.text,
            root.ids.drop_item_category.ids.label_item.text,
            root.ids.drop_item_costs.ids.label_item.text,
            root.ids.add_price.text)
    Widget:
        size_hint_y: 0.1

<MainNavigationItem>:
    orientation: 'vertical'
    MDBoxLayout:
        md_bg_color: [0.85, 0.92, 0.98, 1]
        padding: "10sp", "20sp", "5sp", "0sp"
        MDTextField:
            id: search_id
            font_size: "18sp"
            hint_text: "Поиск"
            line_color_focus: [0.20, 0.25, 0.26, 1]
        MDIconButton:
            icon: "magnify"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            on_release:
                root.searching_results(root.ids.search_id.text, app.root.currency)
    ScrollView:
        size_hint: 0.99, 8
        bar_width: 11
        scroll_type: ["bars", "content"]
        MDList:
            id: show_result

<CostNavigationItem>:
    orientation: "vertical"
    padding: "20sp"
    spacing: "20sp"
    MDBoxLayout:
        orientation: "vertical"
        CostDataLabel:
            id: set_profit
        CostDataLabel:
            id: set_income
        CostDataLabel:
            id: set_expenditure
    MDRaisedButton:
        text: "Подробнее"
        pos_hint: {"center_x": 0.5}
        font_size: "16sp"
        on_release:
            root.full_info_of_reports(app.root.currency)
    CostDataLabel:
        id: set_description
    Widget:

<ExchangeNavigationItem>:
    orientation: "vertical"
    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: "160dp"
        padding: "5sp", "15sp", "10sp", "10sp"
        md_bg_color: [0.85, 0.92, 0.98, 1]
        MDBoxLayout:
            CostDataLabel:
                text: "Валюта"
            CostDataLabel:
                text: "Покупка"
            CostDataLabel:
                text: "Продажа"
        MDBoxLayout:
            CostDataLabel:
                id: currency_1_1
            CostDataLabel:
                id: currency_1_2
            CostDataLabel:
                id: currency_1_3
        MDBoxLayout:
            CostDataLabel:
                id: currency_2_1
            CostDataLabel:
                id: currency_2_2
            CostDataLabel:
                id: currency_2_3
        MDBoxLayout:
            CostDataLabel:
                id: currency_3_1
            CostDataLabel:
                id: currency_3_2
            CostDataLabel:
                id: currency_3_3
    MDBoxLayout:
        size_hint_y: None
        height: "60dp"
        padding: 0, "20sp"
        MDLabel:
            id: update_time
            font_size: "16sp"
            halign: "center"
    MDRaisedButton:
        text: "Обновить"
        pos_hint: {"center_x": 0.5}
        font_size: "16sp"
        on_release:
            root.set_course_api()
    Widget:

<BoxItemEditReport>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200dp"
    MDBoxLayout:
        MDLabel:
            text: "Описание"
        MDTextField:
            id: changed_description
            pos_hint: {"center_y": 0.5}
    MDBoxLayout:
        MDLabel:
            text: "Категория"
        MDDropDownItem:
            id: drop_item_category
            pos_hint: {"center_y": 0.55}
            on_release:
                root.drop_down_category_menu()
    MDBoxLayout:
        MDLabel:
            text: "Тип"
        MDDropDownItem:
            id: drop_item_costs
            pos_hint: {"center_y": 0.55}
            on_release:
                root.drop_down_cost_menu()
    MDBoxLayout:
        MDLabel:
            text: "Цена"
        MDTextField:
            id: changed_price
            pos_hint: {"center_y": 0.5}
            required: True
    Widget:

<RecordWidget>:
    text_color: [0.67, 0.23, 0.23, 1]
    theme_text_color: "Custom"
    MDIcon:
        id: md_icon
        pos_hint: {"center_x": 0.57, "center_y": 0.5}
    IconRightWidget:
        id: button
        icon: "dots-vertical"
        on_release:
            root.show_menu()

<DropDownMenuReportsBox>:
    radius: [24, 24, 24, 24]
    background_color: [.66, 0.88, 0.92, 1]

<OneLineListItem>:
    divider: None
