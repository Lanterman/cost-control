# :kivy 2.1.0

<MainWindow>:
    orientation: 'vertical'

    MDToolbar:
        title: "Cost Control"
        MDIconButton:
            icon: 'eye'
            pos_hint: {"center_x": 0.5, "center_y": .5}
            on_release: app.all_reports()

    MDBoxLayout:
        orientation: 'horizontal'
        MDBottomNavigation:
            id: bottom_nav
            panel_color: [0.80, 0.85, 0.75, 1]
            text_color_normal: 0.55, 0.6, 0.6, 1
            text_color_active: 1, 0, 0, 1

            MDBottomNavigationItem:
                id: main
                name: "screen main"
                icon: "calendar-text-outline"
                MDBoxLayout:
                    md_bg_color: [0.85, 0.92, 0.98, 1]
                    orientation: 'vertical'
                    MDBoxLayout:
                        md_bg_color: [0.80, 0.85, 0.75, 1]
                        padding: 10, 5, 5, 5
                        MDTextField:
                            id: search_id
                            font_size: 18
                            hint_text: "search"
                            line_color_focus: [0.20, 0.25, 0.26, 1]
                        MDIconButton:
                            icon: "magnify"
                            pos_hint: {"center_x": 0.5, "center_y": 0.43}
                            on_release:
                                app.searching_results(root.ids.search_id.text)
                    ScrollView:
                        size_hint: 0.99, 8
                        bar_color: [0.24, 0.25, 0.30, 1]
                        bar_inactive_color: [0.24, 0.25, 0.30, 1]
                        bar_width: 11
                        scroll_type: ["bars", "content"]
                        MDList:
                            id: show_result

            MDBottomNavigationItem:
                name: "screen add"
                icon: "plus-box"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTextField:
                        id: add_description
                        hint_text: "Введите описание"
                        multiline: True
                    MDTextField:
                        id: add_category
                        hint_text: "Введите категорию"
                    MDTextField:
                        id: add_cost
                        hint_text: "Введите cost"
                    MDTextField:
                        id: add_price
                        hint_text: "Введите price"
                    Widget:
                    MDFloatingActionButton:
                        icon: "plus"
                        pos_hint: {'right': 0.95}
                        on_release:
                            app.insert_data(root.ids.add_description.text,
                            root.ids.add_category.text,
                            root.ids.add_cost.text,
                            root.ids.add_price.text)

            MDBottomNavigationItem:
                name: "screen cost"
                icon: "currency-usd"
                MDLabel:
                    text: "In developing"
                    halign: 'center'

            MDBottomNavigationItem:
                name: "screen clear"
                icon: "database-remove-outline"
                MDLabel:
                    text: "In developing"
                    halign: 'center'

<MainNavigationItem>:
    text_color: [0.67, 0.23, 0.23, 1]
    theme_text_color: "Custom"
    MDIcon:
        pos_hint: {"center_x": 0.57, "center_y": 0.5}
        icon: "language-python"
    IconRightWidget:
        id: button
        icon: "dots-vertical"
        on_release:
            root.show_menu()

<DropdownMenuFunctionsOfReport>:
    width_mult: 1.6
    max_height: 147
    radius: [24, 24, 24, 24]
    background_color: [.66, 0.88, 0.92, 1]

<IfNoRecords>:
    halign: "center"
    text: "No records"
    theme_text_color: "Custom"
    text_color: 0.89, 0.39, 0.26, 1

<BoxItemEditReport>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "400dp"
    BoxLayout:
        MDLabel:
            text: "Description"
        MDTextField:
            id: changed_description
            required: True
    BoxLayout:
        MDLabel:
            text: "Category"
        MDDropDownItem:
            id: drop_item_category
            on_release:
                root.drop_down_category_menu()

    BoxLayout:
        MDLabel:
            text: "Cost"
        MDDropDownItem:
            id: drop_item_costs
            on_release:
                root.drop_down_costs_menu()

    BoxLayout:
        MDLabel:
            text: "Price"
        MDTextField:
            id: changed_price
            text: "1"
    Widget:
    MDRaisedButton:
        text: "Apply"
        pos_hint: {'right': 0.9}
        on_release:
            root.apply_change(root.ids.changed_description.text,
            root.ids.drop_item_category.ids.label_item.text,
            root.ids.drop_item_costs.ids.label_item.text,
            root.ids.changed_price.text)

<DropDownMenuReportsBox>:
    width_mult: 1.9
    max_height: 387
    divider: "inset"
    radius: [24, 24, 24, 24]
    background_color: [.66, 0.88, 0.92, 1]
